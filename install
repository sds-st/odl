#Install java
sudo apt-get update
sudo apt-get install default-jre
sudo apt-get install default-jdk
export JAVA_HOME=/usr/lib/jvm/java-1.7.0-openjdk-amd64


#install unzip
sudo apt-get install unzip




#install ODL
#version = 0.3.0-SNAPSHOT
#to use: ${version}

wget 'https://jenkins.opendaylight.org/integration/job/integration-master-project-centralized-integration/lastSuccessfulBuild/artifact/distributions/base/target/distributions-base-0.3.0-SNAPSHOT-osgipackage.zip'
unzip distributions-base-0.3.0-SNAPSHOT-osgipackage.zip 
cd opendaylight
./run.sh 


#set version = 0.1.0-SNAPSHOT
wget 'https://jenkins.opendaylight.org/openflowplugin/job/openflowplugin-merge/lastSuccessfulBuild/org.opendaylight.openflowplugin$drop-test/artifact/org.opendaylight.openflowplugin/drop-test/0.1.0-SNAPSHOT/drop-test-0.1.0-SNAPSHOT.jar'
mv drop-test-0.1.0-SNAPSHOT.jar opendaylight/plugins

#set version = 0.2.2-SNAPSHOT
wget 'https://jenkins.opendaylight.org/integration/job/integration-helium-project-centralized-integration/lastSuccessfulBuild/artifact/distributions/extra/karaf/target/distribution-karaf-0.2.2-SNAPSHOT.zip'
unzip distribution-karaf-0.2.2-SNAPSHOT.zip
cd distribution-karaf-0.2.2-SNAPSHOT

#changing in etc/org.apache.karaf.management.cfg the "0.0.0.0" instances to "127.0.0.1" fixed it.

bin/karaf 


bundle:install mvn:org.opendaylight.controller/arphandler/0.5.4-SNAPSHOT 
bundle:start arphandler
